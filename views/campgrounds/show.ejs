<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <p class="lead">YelpCamp</p>            
            <ul class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </ul>
        </div>
        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
            <div class="thumbnail">
                <img class="image-responsive" src="<%= campground.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">$99.00</h4>
                    <h3><a><%=campground.name%></a></h3>   
                    <p><%=campground.description%></p>
                   <p>
                       <em>Submitted By <%=campground.author.username%></em>
                    </p>
                    <%if(currentUser &&campground.author.id.equals(currentUser._id)){%>
                    <a class="btn btn-warning btn-xs" href="/campgrounds/<%=campground._id%>/edit">Edit Campground</a>    
                    <form id="del-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-xs">Delete</button>
                    </form>
                <%}%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <strong><%=comment.author.username%></strong>
                            <span class="pull-right">10 days ago</span>
                                <p><%=comment.text%></p>
                            <a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-warning btn-xs"> Edit</a>
                        </div>
                        
                    </div>
                    
                
                <%})%>
            </div>
        </div>
           
    </div>

</div>


<div class="container text-center">
    
 



</div>
<% include ../partials/footer %>


